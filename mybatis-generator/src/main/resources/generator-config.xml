<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE generatorConfiguration
        PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
        "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">

<generatorConfiguration>
    <context id="Mysql" targetRuntime="MyBatis3" defaultModelType="flat">

        <!-- 自动检查关键字，为关键字增加反引号 select * from `from` -->
        <property name="autoDelimitKeywords" value="true"/>
        <property name="beginningDelimiter" value="`"/>
        <property name="endingDelimiter" value="`"/>

        <!--覆盖生成XML文件-->
        <plugin type="org.mybatis.generator.plugins.UnmergeableXmlMappersPlugin" />
        <!-- 生成的实体类添加toString()方法 -->
        <plugin type="org.mybatis.generator.plugins.ToStringPlugin"/>

        <!-- 不生成注释 -->
        <commentGenerator>
            <property name="suppressAllComments" value="true"/>
        </commentGenerator>

        <!-- 配置数据源，需要根据自己的项目修改 -->
        <jdbcConnection driverClass="com.mysql.cj.jdbc.Driver"
                        connectionURL="jdbc:mysql://127.0.0.1:3306/nls_api?serverTimeZone=UTC&amp;allowMultiQueries=true"
                        userId="root"
                        password="123456">
        </jdbcConnection>

        <!-- domain类的位置 targetProject是相对pom.xml的路径-->
        <javaModelGenerator targetProject="../business/src/main/java"
                            targetPackage="com.nlsapi.core.business.member.domain"/>

        <!-- mapper xml的位置 targetProject是相对pom.xml的路径 -->
        <sqlMapGenerator targetProject="../business/src/main/resources"
                         targetPackage="mapper/member"/>

        <!-- mapper类的位置 targetProject是相对pom.xml的路径 -->
        <javaClientGenerator targetProject="../business/src/main/java"
                             targetPackage="com.nlsapi.core.business.member.mapper"
                             type="XMLMAPPER"/>

        <!--<table tableName="demo" domainObjectName="Demo"/>-->
        <!--<table tableName="sms_code" domainObjectName="SmsCode"/>-->
        <!--<table tableName="member" domainObjectName="Member"/>-->
        <!--<table tableName="filetrans" domainObjectName="Filetrans"/>-->
        <!--<table tableName="order_info" domainObjectName="OrderInfo"/>-->
        <!--<table tableName="filetrans_subtitle" domainObjectName="FiletransSubtitle"/>-->
        <!--<table tableName="user" domainObjectName="User"/>-->
        <table tableName="member_login_log" domainObjectName="MemberLoginLog"/>
    </context>
</generatorConfiguration>
